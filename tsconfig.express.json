{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": false,
        "outDir": "build/express",
        "target": "es5",
        "esModuleInterop": true
    },
    "include": [
        "express/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}